

{{#each records}}

<div class="demo-card-wide mdl-card mdl-shadow--2dp">

  <div class="mdl-card__title">

    <canvas id="chart-{{this._id}}" width="800" height="400"></canvas>

    <h2 class="mdl-card__title-text">{{this.target}}</h2>
  </div>

  <div class="mdl-card__supporting-text">
    Lorem ipsum dolor sit amet, consectetur adipiscing elit.
    Mauris sagittis pellentesque lacus eleifend lacinia...
  </div>

  <div class="mdl-card__actions mdl-card--border">

    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
      Update
    </a>

    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
      Delete
    </a>

  </div>

  <div class="mdl-card__menu">
    <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
      <i class="material-icons">favorite</i>
    </button>
  </div>

</div>


<script>

var ctx = document.getElementById("chart-{{this._id}}").getContext('2d');
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels:  {{{ safeString this.titles }}},
        datasets: [{
            label: '# of Votes',
            data: {{{ safeString this.prices }}},
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero:true
                }
            }]
        }
    }
});

</script>


{{/each}}
